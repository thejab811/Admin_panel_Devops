{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./app/src/",
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "configs/*": [
        "./configs/*"
      ],
      "constants/*": [
        "./constants/*"
      ],
      "services/*": [
        "./services/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "layouts/*": [
        "./layouts/*"
      ],
      "pages/*": [
        "./pages/*"
      ],
      "views/*": [
        "./views/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./types/*.d.ts", "app/src/layouts/index.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
